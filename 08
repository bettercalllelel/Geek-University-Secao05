nota1 = float(input('Diga uma nota entre 0 e 10:\n'))
nota2 = float(input('Diga outra nota entre 0 e 10:\n'))

if nota1 >= 0 and nota1 <= 10 and nota2 >= 0 and nota2 <= 10:
    print(f'A média entre as notas {nota1} e {nota2} é {(nota1+nota2)/2}')

else:
  print('Uma das notas está fora do padrão e por isso o programa foi encerrado')
