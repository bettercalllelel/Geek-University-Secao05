menu = int(input('Escolha a operação matemática a realizar: (1 - Soma; 2 - Subtração; 3 - Multiplicação; 4 - Divisão)\n'))

num1 = int(input('Diga o valor do primeiro elemento:\n'))

num2 = int(input('Diga o valor do segundo elemento:\n'))

if menu == 1:
    total = (num1+num2)
    print('O resultado da soma entre {num1} e {num2} é {total}')

elif menu == 2:
    total = num1-num2
    print(f'O resultado da subtração entre {num1} e {num2} é {total}')

elif menu == 3:
    total = (num1*num2)
    print(f'O resultado da multiplicação entre {num1} e {num2} é {total}')

elif menu == 4:
    total = (num1/num2)
    print(f'O resultado da divisão entre {num1} e {num2} é {total}')

else:
    print('Entrada errada no sistema!')
