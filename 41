peso = float(input('Diga o peso:\n'))
alt = float(input('Diga a altura em metros:\n'))

imc = peso/(alt**2)

if imc <= 18.5:
    print(f'Segundo a tabela do IMC, o paciente encontra-se "Abaixo do peso".')

elif 18.6 <= imc <= 24.9:
    print(f'Segundo a tabela do IMC, o paciente encontra-se "SaudÃ¡vel".')

elif 25 <= imc <= 29.9:
    print(f'Segundo a tabela do IMC, o paciente encontra-se "Peso em Excesso".')

elif 30 <= imc <= 34.9:
    print(f'Segundo a tabela do IMC, o paciente encontra-se "Obesidade Grau I".')

elif 35 <= imc <= 39.9:
    print(f'Segundo a tabela do IMC, o paciente encontra-se "Obesidade Grau II".')

else:
    print(f'Segundo a tabela do IMC, o paciente encontra-se "Obesidade Grau III".')
